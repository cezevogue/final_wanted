{% extends 'backoffice.html.twig' %}

{% block titre %}
    {{ title }}
{% endblock %}
{% block title %}
    {{ parent() ~title }}
{% endblock %}




{% block body %}





    <a href="{{ path('media_create', {'id': id}) }}" class="btn btn-secondary btn-lg">Ajouter des médias</a>



    <form method="post" class="mt-5" action="{{ path('product_delete_medias') }}">


        <div class="row">
        {% for media in medias %}

            <div  class="col-4 my-2">
                <div class="row">
                    <img class="col-12" src="{{ asset('upload/') }}{{ media.src }}" width="200" alt="">
                    <div  class="form-check">
                        <input class="form-check-input" name="choice[]" multiple type="checkbox" value="{{ media.id }}" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckIndeterminate">
                            {{ media.title }}
                        </label>
                    </div>
                </div>
            </div>


        {% endfor %}
        </div>
        <button type="submit" class=" mt-5 btn-block btn btn-info">Supprimer les médias</button>
    </form>

{% endblock %}

