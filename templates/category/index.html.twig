{% extends 'backoffice.html.twig' %}

{% block titre %}
    {{ title }}
{% endblock %}
{% block title %}
    {{ parent() }} {{ title }}
{% endblock %}



{% block body %}

    {{ form(formu) }}

    <table class="table table-dark table-striped mt-5 w-75 mx-auto">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for category in categories %}
            <tr>
                <td >{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('category_update', {'id': category.id}) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-danger">Supprimer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
